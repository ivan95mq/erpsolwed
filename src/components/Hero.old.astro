---
import Meteors from './magicui/Meteors.tsx';
import ShimmerButton from './magicui/ShimmerButton.tsx';
import NumberTicker from './magicui/NumberTicker.tsx';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20">
  <!-- Background effects -->
  <div class="absolute inset-0 bg-gradient-to-b from-base-100 via-base-200 to-base-100"></div>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-secondary/10 via-transparent to-transparent"></div>

  <!-- Meteors -->
  <div class="absolute inset-0 overflow-hidden">
    <Meteors number={15} client:load />
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-container mx-auto px-4 text-center">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2 bg-base-300/50 backdrop-blur-sm border border-secondary/20 rounded-pill px-4 py-2 mb-8">
      <span class="relative flex h-2 w-2">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-secondary opacity-75"></span>
        <span class="relative inline-flex rounded-full h-2 w-2 bg-secondary"></span>
      </span>
      <span class="font-body text-sm text-gray-custom">Compatible con Verifactu 2026</span>
    </div>

    <!-- Headline -->
    <h1 class="font-heading text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
      <span class="text-white">Factura sin</span>
      <br />
      <span class="gradient-text">complicaciones</span>
    </h1>

    <!-- Subheadline -->
    <p class="font-body text-lg md:text-xl text-gray-custom max-w-2xl mx-auto mb-10">
      ERP en la nube para pymes y autónomos. Facturación electrónica, contabilidad,
      inventario y más. Todo en un solo lugar.
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16">
      <ShimmerButton href="#pricing" size="lg" client:load>
        Prueba gratis 1 mes
      </ShimmerButton>
      <a href="#features" class="btn btn-outline btn-lg rounded-pill font-heading uppercase tracking-wider border-white/20 hover:bg-white/10 hover:border-white/40">
        Ver características
      </a>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-3xl mx-auto">
      <div class="text-center">
        <div class="font-heading text-3xl md:text-4xl font-bold text-secondary">
          <NumberTicker value={30} suffix="+" client:load />
        </div>
        <p class="font-body text-sm text-gray-custom mt-1">Empresas activas</p>
      </div>
      <div class="text-center">
        <div class="font-heading text-3xl md:text-4xl font-bold text-secondary">
          <NumberTicker value={99} suffix="%" client:load />
        </div>
        <p class="font-body text-sm text-gray-custom mt-1">Uptime garantizado</p>
      </div>
      <div class="text-center">
        <div class="font-heading text-3xl md:text-4xl font-bold text-secondary">
          <NumberTicker value={24} suffix="/7" client:load />
        </div>
        <p class="font-body text-sm text-gray-custom mt-1">Soporte técnico</p>
      </div>
      <div class="text-center">
        <div class="font-heading text-3xl md:text-4xl font-bold text-secondary">
          <NumberTicker value={1} prefix="" suffix=" mes" client:load />
        </div>
        <p class="font-body text-sm text-gray-custom mt-1">Prueba gratis</p>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
