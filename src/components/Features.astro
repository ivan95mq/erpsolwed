---
import BorderBeam from './magicui/BorderBeam.tsx';
import ScrollReveal from './magicui/ScrollReveal.tsx';
import Card3D from './magicui/Card3D.tsx';

const features = [
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>`,
    image: "/images/features/facturacion.png",
    title: "Facturación Electrónica",
    description: "Crea facturas electrónicas, presupuestos y albaranes en segundos. Software de facturación homologado que cumple con la normativa española y europea de facturación digital."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>`,
    image: "/images/features/verifactu.png",
    title: "Compatible Verifactu 2026",
    description: "100% compatible con el sistema Verifactu de la Agencia Tributaria. Tu software ERP preparado para la normativa de facturación obligatoria en España desde 2026."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" /></svg>`,
    image: "/images/features/analisis.webp",
    title: "Contabilidad Online",
    description: "Gestiona la contabilidad de tu pyme de forma sencilla desde la nube. Asientos automáticos, balances e informes fiscales para autónomos y empresas."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" /></svg>`,
    image: "/images/features/logistica.webp",
    title: "Control de Inventario",
    description: "Control de stock en tiempo real desde cualquier lugar. Gestiona almacenes, productos y movimientos de inventario sin complicaciones."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" /></svg>`,
    image: "/images/features/tpv.png",
    title: "TPV Integrado",
    description: "Punto de venta integrado con tu ERP. Cobra con tarjeta, efectivo o mixto. Genera tickets automáticos y controla arqueos de caja desde cualquier dispositivo."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>`,
    image: "/images/features/informes.png",
    title: "Informes Avanzados",
    description: "Analítica empresarial en tiempo real. Visualiza ventas, gastos, rentabilidad y KPIs de tu negocio. Toma decisiones informadas basadas en datos reales."
  },
];
---

<section id="features" class="py-24 relative overflow-hidden bg-base-100">
  <!-- Decorative blobs -->
  <div class="absolute top-10 right-10 w-72 h-72 bg-secondary/5 rounded-full blur-[100px] animate-pulse"></div>
  <div class="absolute bottom-10 left-10 w-96 h-96 bg-secondary/5 rounded-full blur-[120px] animate-pulse" style="animation-delay: 1s"></div>

  <div class="relative z-10 max-w-container mx-auto px-4">
    <!-- Section header -->
    <ScrollReveal client:visible>
      <div class="text-center mb-16">
        <span class="font-body text-secondary uppercase tracking-widest text-sm">Características</span>
        <h2 class="font-heading text-3xl md:text-5xl font-bold mt-4 mb-6 text-base-content">
          Todo lo que necesitas para <span class="text-secondary">gestionar tu negocio</span>
        </h2>
        <p class="font-body text-base-content/70 max-w-2xl mx-auto">
          Un ERP completo diseñado para pymes y autónomos en Mérida, Extremadura y toda España.
          Software de gestión empresarial fácil de usar, potente y siempre actualizado
          con las últimas normativas de facturación electrónica y Verifactu.
        </p>
      </div>
    </ScrollReveal>

    <!-- Features grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {features.map((feature, index) => (
        <ScrollReveal delay={index * 0.1} client:visible>
          <Card3D client:visible>
            <div class="group relative bg-base-100 border border-base-300 rounded-2xl p-8 hover:border-secondary/50 transition-all duration-300 h-full shadow-lg hover:shadow-xl overflow-hidden">
              <BorderBeam size={150} duration={10} client:visible />

              <div class="relative z-10">
                <!-- Feature illustration -->
                <div class="w-full h-48 mb-6 rounded-xl overflow-hidden bg-gradient-to-br from-base-200 to-base-100 flex items-center justify-center">
                  <img
                    src={feature.image}
                    alt={`${feature.title} - Software ERP SOLWED para gestión de ${feature.title.toLowerCase()} en pymes`}
                    class="w-full h-full object-contain transform group-hover:scale-110 transition-transform duration-500"
                    loading="lazy"
                  />
                </div>

                <!-- Icon badge (smaller, positioned absolutely) -->
                <div class="absolute top-2 right-2 w-10 h-10 rounded-lg bg-gradient-to-br from-secondary/20 to-secondary/5 flex items-center justify-center text-secondary group-hover:bg-gradient-to-br group-hover:from-secondary/30 group-hover:to-secondary/10 transition-all duration-300 group-hover:scale-110">
                  <Fragment set:html={feature.icon} />
                </div>

                <h3 class="font-heading text-xl font-bold mb-3 text-base-content group-hover:text-secondary transition-colors">
                  {feature.title}
                </h3>
                <p class="font-body text-base-content/70 transition-colors">
                  {feature.description}
                </p>
              </div>

              <!-- Hover glow effect -->
              <div class="absolute inset-0 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none">
                <div class="absolute inset-0 bg-gradient-to-br from-secondary/10 via-transparent to-transparent rounded-2xl"></div>
              </div>
            </div>
          </Card3D>
        </ScrollReveal>
      ))}
    </div>

    <!-- Extra features list -->
    <ScrollReveal delay={0.6} client:visible>
      <div class="mt-16 text-center">
        <p class="font-body text-base-content/70 mb-6">Y mucho más incluido en todos los planes:</p>
        <div class="flex flex-wrap justify-center gap-4">
          {["Backups diarios", "Portal personalizado", "Soporte técnico", "Actualizaciones gratis", "SSL incluido", "Complianz"].map((item) => (
            <span class="inline-flex items-center gap-2 bg-base-200 border border-base-300 rounded-pill px-4 py-2 text-sm text-base-content/70 hover:bg-base-300 hover:border-secondary/30 transition-all duration-300 hover:scale-105 cursor-default group">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-secondary group-hover:scale-125 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              {item}
            </span>
          ))}
        </div>
      </div>
    </ScrollReveal>
  </div>
</section>
